<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WCWaitingList</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WCWaitingListProject.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
</head>
<body>
    <div class="d-flex flex-column min-vh-100 flex-shrink-0 p-3 text-white bg-dark fixed-top one" style="width: 15%; min-height: 100%; float: left; z-index: -1"> <a href="/" class="d-flex align-items-center mb-3 mb-md-0 
        me-md-auto text-white text-decoration-none text-center"><a id="home" class="nav-link text-left text-white" asp-area="" asp-page="/Index"><svg class="" width="40" height="32"> </svg><i class="fa fa-clock-o fa-3x" style="color: white"></i><span class="fs-4 text-center">Waiting List</span></a>
    <hr>    
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item"> <a id="create" class="nav-link text-left text-white" asp-area="" asp-action="Create"><i class="fa fa-plus"></i><span class="ms-2">New Entry</span></a></li>
            <li class="nav-item"> <a id="signout" class="nav-link text-left text-white" asp-area="Identity" asp-page="/Account/Login"><i class="fa fa-sign-out"></i><span class="ms-2">Sign Out</span></a></li>
        </ul>
    </div>
    <div class="container" style="width: 86%; float: right; margin-bottom: 40px;">
        <main role="main" class="pb-3 flex-grow-1 overflow-auto">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-white bg-dark container-fluid flew-grow-0 flex-shrink-1" style="line-height: 50px; z-index: 1000;">
        <div class="container">
            &copy; 2022 - WCWaitingList - @* <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
